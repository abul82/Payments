<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

   <LinearLayout
       android:id="@+id/payment"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:visibility="gone">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="90dp">
           <TextView
               android:id="@+id/type"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Type"
               android:textSize="20sp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Amount"
               android:textSize="20sp"/>
           <EditText
               android:id="@+id/amnt_val"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter the Amount "/>
       </LinearLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center">
           <Button
               android:id="@+id/valid_btn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="100dp"
               android:background="#00FF00"
               android:text="Valid"/>
           <Button
               android:id="@+id/cancel_btn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="100dp"
               android:layout_marginStart="100dp"
               android:text="Cancel"/>

       </RelativeLayout>

   </LinearLayout>
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/tv_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/monitor"
            android:text="Television"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/mobile_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/smartphone"
            android:text="Mobile"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/internet_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/internet"
            android:text="Internet"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/eb_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/thunder"
            android:text="Electricity"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/water_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/water"
            android:text="Water"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>